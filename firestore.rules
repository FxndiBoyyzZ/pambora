rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own documents
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Posts can be read by any authenticated user.
    // Posts can only be created, updated, or deleted by the user who owns them.
    match /posts/{postId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
     // Allow authenticated users to list posts for the feed
    match /posts {
        allow list: if request.auth.uid != null;
    }

    // Quiz config can be read by anyone (for the quiz to work)
    // but only written to by authenticated users (for the admin page)
    match /config/{configId} {
        allow read: if true;
        allow write: if request.auth.uid != null;
    }
  }
}
