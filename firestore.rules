rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can only read and write their own document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Any authenticated user can read the list of posts or a single post.
    // Any authenticated user can create a post.
    // Only the author of a post can update or delete it.
    match /posts/{postId} {
      allow list, get: if request.auth.uid != null;
      allow create: if request.auth.uid != null
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // The quiz configuration can be read by any authenticated user.
    // Only admins (not implemented in rules yet, so locked down) can write.
    match /config/quiz {
      allow get: if request.auth.uid != null;
      allow write: if false;
    }
  }
}
