rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'pam@admin.com';
    }

    match /users/{userId} {
      allow list: if isAdmin();
      allow read, write: if isAdmin() || request.auth.uid == userId;
    }

    match /config/{docId} {
      allow write: if isAdmin();
      allow read: if request.auth != null;
    }

    // Regras para a coleção 'notifications'
    match /notifications/{notificationId} {
      // Permite que o admin CRIE (enfileire) novas notificações.
      allow create: if isAdmin();
      
      // Permite que o admin LEIA as notificações para exibir o relatório de status.
      allow read, list: if isAdmin();
    }
  }
}