rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Authenticated users can list and read all posts.
    match /posts/{postId} {
      allow list, read: if request.auth.uid != null;
      // Users can create posts.
      allow create: if request.auth.uid != null;
      // Users can only update or delete their own posts.
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // Authenticated users can read the quiz configuration.
    match /config/{docId} {
        allow read: if request.auth.uid != null;
        // For the admin page, only allow write if it's a specific admin UID.
        // For now, let's keep it simple and allow any authenticated user to write.
        // In a real production scenario, you'd lock this down.
        allow write: if request.auth.uid != null;
    }
  }
}
