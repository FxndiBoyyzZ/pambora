rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra simplificada para desenvolvimento:
    // Permite leitura e escrita a qualquer usuário autenticado.
    // A segurança para operações de admin é controlada pelo código do app.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

    