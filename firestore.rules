rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para a coleção 'users'
    match /users/{userId} {
      // Um usuário só pode ler ou escrever em seu próprio documento.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para a coleção 'posts'
    match /posts/{postId} {
      // Qualquer usuário autenticado pode ler (get) um post individual.
      allow get: if request.auth != null;
      // Apenas o autor do post pode atualizá-lo ou excluí-lo.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Regras para a lista da coleção 'posts'
    match /posts/{document=**} {
        // Qualquer usuário autenticado pode listar (list) posts e criar (create) novos posts.
        allow list, create: if request.auth != null;
    }

    // Regras para a coleção 'config'
    match /config/{docId} {
      // Qualquer usuário autenticado pode ler a configuração.
      allow get: if request.auth != null;
    }
  }
}
