rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule for all documents: only allow access if user is authenticated.
    // This is a temporary secure rule for launch.
    // For more specific admin roles, this should be updated.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
