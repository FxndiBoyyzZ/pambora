rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own profile document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // This rule allows any authenticated user to LIST the posts collection,
    // which is required for the feed query to work.
    match /posts/{document=**} {
        allow list: if request.auth != null;
    }

    // These rules apply to individual post documents.
    match /posts/{postId} {
      // Allow any authenticated user to GET a single post.
      allow get: if request.auth != null;

      // Allow users to CREATE a post if they are logged in and the userId in the
      // new document matches their own UID.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Allow users to UPDATE or DELETE a post only if they are the original author.
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Config collection can be read by any authenticated user.
    match /config/{configId} {
      allow get, list: if request.auth != null;
      allow write: if false; // Nobody can write to config from the client.
    }
  }
}
