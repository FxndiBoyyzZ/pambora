
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of a document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can only read and write to their own profile.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Config documents are read-only for authenticated users.
    match /config/{docId} {
        allow get: if request.auth != null;
        allow list, create, update, delete: if false; // Admins would write through a backend
    }

    // Posts can be read by any authenticated user.
    // Creation is allowed for any authenticated user.
    // Update/Delete is restricted to the post's author.
    match /posts/{postId} {
      allow get: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
    
    match /posts/{document=**} {
      allow list: if request.auth != null;
    }
  }
}
