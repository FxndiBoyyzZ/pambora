rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Can only read/write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Config: Any authenticated user can read the quiz configuration.
    match /config/{docId} {
        allow get: if request.auth.uid != null;
        // Allow admin write for now for simplicity, can be locked down later.
        allow write: if request.auth.uid != null; 
    }

    // Posts:
    // - Any authenticated user can read all posts.
    // - Any authenticated user can create a post, but they must be the author.
    // - Only the author of a post can update or delete it.
    match /posts/{postId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth.uid != null && resource.data.userId == request.auth.uid;
    }
  }
}
