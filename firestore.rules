rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'pam@admin.com';
    }

    match /users/{userId} {
      allow list: if isAdmin();
      allow read, write: if isAdmin() || request.auth.uid == userId;
    }

    match /config/{docId} {
      allow write: if isAdmin();
      allow read: if request.auth != null;
    }

    // Notifications are no longer queued, so no special rules are needed.
    // The Genkit flow runs with admin privileges on the backend.
    match /notifications/{notificationId} {
      allow read, write, create, delete: if false; // No one can touch this collection from the client.
    }
  }
}
