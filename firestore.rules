rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção 'users'
    match /users/{userId} {
      // Usuários podem ler, atualizar e apagar seu próprio documento.
      allow read, update, delete: if request.auth.uid == userId;
      // Qualquer usuário autenticado pode criar seu próprio documento de usuário.
      allow create: if request.auth.uid != null;
    }

    // Regra para a coleção 'posts'
    match /posts/{postId} {
      // Qualquer usuário autenticado pode ler a lista de posts e posts individuais.
      allow get, list: if request.auth.uid != null;
      // Qualquer usuário autenticado pode criar um post.
      allow create: if request.auth.uid != null;
      // Usuários só podem atualizar ou apagar seus próprios posts.
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
