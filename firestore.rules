rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read/write their own data, but not others'
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Allow anyone authenticated to list the posts collection for the feed
    match /posts {
      allow list: if request.auth.uid != null;
    }
    
    // Allow authenticated users to read and create posts.
    // Only allow users to update/delete their own posts.
    match /posts/{postId} {
      allow read, create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // Protect the quiz configuration so it's only editable from the server/console
    match /config/{docId} {
       allow read, write: if false; 
    }
  }
}
