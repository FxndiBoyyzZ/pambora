rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth.uid != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users: Can only read/write their own data
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Config: Allow any authenticated user to read config files (like the quiz)
    match /config/{docId} {
       allow read: if isSignedIn();
       // Write access should be restricted to admins in a real app
       allow write: if isSignedIn(); 
    }

    // Posts: Allow reads for all, but writes only for owners
    match /posts/{postId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    // Allow list on posts collection for the main feed
    match /posts {
        allow list: if isSignedIn();
    }
  }
}