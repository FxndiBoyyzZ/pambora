rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // As regras de usuário permitem que alguém leia e escreva apenas em seus próprios dados.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Qualquer usuário autenticado pode ler e criar posts.
    // Apenas o autor original pode atualizar ou excluir seu próprio post.
    match /posts/{postId} {
      allow read, create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
    
  }
}
