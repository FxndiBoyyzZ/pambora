rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Logged-in users can only read/write their own data.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // WARNING: Insecure rule for development purposes.
    // This allows anyone to read/write to the application configuration.
    // This MUST be secured before deploying to production, for example by
    // only allowing specific admin UIDs to write.
    match /config/{docId} {
      allow read, write: if true;
    }
  }
}
