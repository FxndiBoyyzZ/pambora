rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'pam@admin.com';
    }

    match /users/{userId} {
      // Admin can list all users (needed for the leads page).
      allow list: if isAdmin();
      
      // Admin can read/write any user document.
      // A regular user can only read/write their own document.
      allow read, write: if isAdmin() || request.auth.uid == userId;
    }

    match /config/{docId} {
      // Admin can write to config.
      allow write: if isAdmin();
      
      // Any authenticated user (including admin) can read config.
      allow read: if request.auth != null;
    }
  }
}
