rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read or write to their own document
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Rules for the 'posts' collection
    match /posts/{postId} {
        // Any authenticated user can read a single post
        allow get: if isAuthenticated();
        
        // Only the author can update or delete their own post
        allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }
    
    match /posts/{document=**} {
      // Any authenticated user can list posts and create new ones
      allow list, create: if isAuthenticated();
    }
    
    // Rules for the 'config' collection (e.g., quiz steps)
    match /config/{configId} {
        // Any authenticated user can read configuration files
        allow get: if isAuthenticated();
        // Writing to config should be restricted (e.g. only from admin panel/server)
        allow write: if isAuthenticated(); // Simplified for now, can be tightened
    }
  }
}
