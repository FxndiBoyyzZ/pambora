rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only manage their own profile data.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Authenticated users can read the entire feed.
    match /posts/{document=**} {
      allow read: if request.auth.uid != null;
    }
    
    // Authenticated users can create posts, and only edit or delete their own.
    match /posts/{postId} {
      allow create: if request.auth.uid != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth.uid != null && resource.data.userId == request.auth.uid;
    }
  }
}
