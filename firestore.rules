rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can only read and write their own data.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Any authenticated user can read the list of posts or individual posts.
    match /posts/{postId} {
      allow list, read: if request.auth != null;
      allow create: if request.auth != null;
      // Only the owner can update or delete their own post.
      allow update, delete: if isOwner(resource.data.userId);
    }

    // The quiz configuration can be read by any authenticated user.
    match /config/quiz {
       allow get: if request.auth != null;
       // For the admin page, only allow write if user is authenticated (you can tighten this later if needed)
       allow write: if request.auth != null;
    }
  }
}
