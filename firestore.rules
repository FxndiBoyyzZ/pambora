
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admin has full, unrestricted access to all documents in the database.
    // This rule is checked first. If the user is the admin, access is granted
    // and no other rules are evaluated for this request.
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'pam@admin.com';
    }

    // Regular users can only read and write to their own user document.
    // This rule only applies to non-admin users due to the admin rule above.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user (including non-admins) can read the configuration files.
    // This rule only applies to non-admin users due to the admin rule above.
    match /config/{docId} {
      allow read: if request.auth != null;
    }
  }
}
