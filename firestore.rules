
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own documents.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Anyone, authenticated or not, can view, create, and modify posts.
    match /posts/{postId} {
      allow read, write: if true;
    }

    match /config/{document} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write config
    }
  }
}
