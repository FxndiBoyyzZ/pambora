rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ADMIN RULE: Admin user has full read/write access to the entire database.
    match /{document=**} {
      allow read, write: if request.auth.token.email == 'pam@admin.com';
    }
    
    // USER SELF-DATA RULE: Users can read and write to their own document in the 'users' collection.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // CONFIG READ RULE: Authenticated users can read the global configuration files.
    match /config/{docId} {
        allow read: if request.auth != null;
    }
  }
}
