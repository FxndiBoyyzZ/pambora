rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'pam@admin.com';
    }

    match /users/{userId} {
      // Allow full access for admin OR if user is accessing their own data.
      allow read, write: if isAdmin() || request.auth.uid == userId;
    }

    match /config/{docId} {
      // Allow full access for admin to read/write, OR any authenticated user to read.
      allow read: if isAdmin() || request.auth != null;
      allow write: if isAdmin(); // Only admin can write config.
    }
  }
}
