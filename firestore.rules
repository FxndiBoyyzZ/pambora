rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own data
    match /users/{userId} {
      allow read, update, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Config can be read by any authenticated user
    match /config/{docId} {
       allow read: if request.auth != null;
    }

    // Posts can be listed/read by any authenticated user
    // Posts can only be created, updated, or deleted by their author
    match /posts/{postId} {
      allow list, read, create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
