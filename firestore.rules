rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // REGRA MESTRA: O admin pode fazer tudo.
    match /{document=**} {
      allow read, write: if request.auth.token.email == 'pam@admin.com';
    }

    // Regras para usuários normais (não-admin)
    // Essas regras são avaliadas somente se o usuário não for o admin.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /config/{docId} {
      allow read: if request.auth != null;
    }
  }
}
