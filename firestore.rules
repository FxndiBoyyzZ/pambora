rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for the 'posts' collection
    match /posts/{postId} {
      // Any authenticated user can read all posts and the list of posts
      allow read: if isAuthenticated();
      // Any authenticated user can create a post
      allow create: if isAuthenticated();
      // Only the author of the post can update or delete it
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can only read or write to their own document
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Rules for the 'config' collection (e.g., quiz steps)
    match /config/{configId} {
        // Any authenticated user can read config documents
        allow read: if isAuthenticated();
        // Disallow client-side writes to config for security
        allow write: if false;
    }
  }
}
