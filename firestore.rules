
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users can read the entire posts collection,
    // create new posts, and update/delete their own posts.
    match /posts/{postId} {
      allow get, list, create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Allow authenticated users to read the quiz configuration
    match /config/quiz {
      allow get: if request.auth != null;
    }
  }
}
